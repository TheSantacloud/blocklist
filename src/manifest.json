{
    "name": "blocklist",
    "version": "1.2.3",
    "description": "Privately manage a block list for websites",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "webNavigation",
        "scripting",
        "background"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon_color_128.png",
        "48": "assets/icon_color_128.png",
        "128": "assets/icon_color_128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "enable_blocklist": {
            "suggested_key": {
                "default": "Ctrl+Shift+B",
                "mac": "MacCtrl+Shift+B"
            },
            "description": "Block sites"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://www.youtube.com/*",
                "*://youtube.com/*"
            ],
            "js": [
                "youtube-minimal.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://www.instagram.com/*",
                "*://instagram.com/*"
            ],
            "js": [
                "instagram-minimal.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icon_color_128.png"
            ],
            "matches": [
                "*://www.youtube.com/*",
                "*://youtube.com/*"
            ]
        }
    ]
}
